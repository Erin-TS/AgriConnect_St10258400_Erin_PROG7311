@*this is the add farmers profile page for employees only
*@

@{
    ViewData["Title"] = "AddFarmers";
    var userRole = Context.Session.GetString("UserRole");
}
@model FarmerModel

<div class="card1">
    <div class="text-center">
        <h1 class="card-title">Add Farmer profile</h1>
        @if (string.IsNullOrEmpty(userRole) || userRole.Equals("Farmer"))
        {
            //display unauhtorised access page
            <h1 class="card-title">Unauthorised access</h1>
            
               
        }
        else
        {
            <p class="home-context">
                Please register a new  farmer profile<br />

            </p>
            <br />
            <div class="row-home">
                <div class="col-md-6-home">
                    <div class="card">
                        <p class="card-text">Please enter the following details.</p>
                        <form asp-controller ="Employee" asp-action="AddFarmer" method="post">
                            <div class="form-group">
                                <label class="signUplable">Framer Name</label>
                                <input asp-for="farmerFirstName" type="text" class="form-control" placeholder="Enter your name" />
                                <span asp-validation-for="farmerFirstName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="signUplable">Framer Last Name</label>
                                <input asp-for="farmerLastName" type="text" class="form-control" placeholder="Enter your last name" />
                                <span asp-validation-for="farmerLastName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="signUplable">Farmer Email</label>
                                <input asp-for="farmerEmail" type="text" class="form-control" placeholder="Enter your email" />
                                <span asp-validation-for="farmerEmail" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="signUplable">Farmer Location</label>
                                <input asp-for="farmerLocation" type="text" class="form-control" placeholder="Enter your employee number" />
                                <span asp-validation-for="farmerLocation" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="signUplable">Password</label>
                                //randome pass will be generated
                            </div>
                        

                            <div class="button-container">
                                <div class="form-group">
                                    <button type="submit" class="btn-submitClaim-home">Create farmer</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>


            </div>
        }
    </div>
</div>